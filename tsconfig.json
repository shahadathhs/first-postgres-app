{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["app/config/*"],
      "@errors/*": ["app/errors/*"],
      "@middlewares/*": ["app/middlewares/*"],
      "@services/*": ["app/modules/*"],
      "@models/*": ["app/models/*"],
      "@controllers/*": ["app/controllers/*"],
      "@schemas/*": ["app/schemas/*"],
      "@types/*": ["app/types/*"],
      "@validations/*": ["app/validations/*"],
      "@helpers/*": ["app/helpers/*"],
      "@routes/*": ["app/routes/*"],
      "@utils/*": ["app/utils/*"],
      "@app/*": ["app/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
